# Runtime mode
ALEXANDRIA_ENV=production

# Server
ALEXANDRIA_HOST=0.0.0.0
ALEXANDRIA_PORT=8000
ALEXANDRIA_WORKERS=2
ALEXANDRIA_LOG_LEVEL=info
ALEXANDRIA_PUBLIC_HOST=api.example.com

# Security and auth
ALEXANDRIA_REQUIRE_API_KEY=true
ALEXANDRIA_ALLOW_ANON_READ=false

# JSON list of API key records:
# [{"key":"...","actor_id":"...","actor_type":"agent|human|system","scopes":["..."]}]
ALEXANDRIA_API_KEYS_JSON='[{"key":"replace-with-long-agent-key","actor_id":"agent-editor-1","actor_type":"agent","scopes":["*"]},{"key":"replace-with-human-ops-key","actor_id":"human-ops-1","actor_type":"human","scopes":["scrolls:write","scrolls:revise","scrolls:retract","reviews:write","replications:write","integrity:write","scholars:write"]}]'

# Network hardening
ALEXANDRIA_TRUSTED_HOSTS=api.example.com,localhost,127.0.0.1
ALEXANDRIA_CORS_ORIGINS=https://app.example.com
ALEXANDRIA_MAX_REQUEST_BYTES=2000000

# Rate limiting
ALEXANDRIA_RATE_LIMIT_ENABLED=true
ALEXANDRIA_RATE_LIMIT_RPM=120
